{
  "name": "html-json-converter",
  "type": "module",
  "version": "3.0.0",
  "description": "A simple HTML to JSON and JSON to HTML converter",
  "main": "dist/index.js",
  "client": "dist/client.js",
  "exports" : {
    ".": {
      "client" : "./dist/client.js",
      "server" : "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/index.js",
    "build": "rimraf dist && tsc",
    "check-format": "biome check src/",
    "format": "biome format --write src/",
    "lint": "biome lint src/",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "test": "vitest run",
    "test:coverage": "rimraf coverage/.tmp && vitest run --coverage",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci",
    "ci": "npm run build && npm run lint && npm run check-exports && npm run test"
  },
  "keywords": [
    "typescript",
    "html",
    "json",
    "converter",
    "html-to-json",
    "html to json",
    "json-to-html",
    "json to html",
    "html to json converter",
    "json to html converter"
  ],
  "author": "Techlism <kundan@techlism.in> (https://github.com/techlism)",
  "bugs": {
    "url": "https://github.com/techlism/html-json-converter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techlism/html-json-converter.git"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.9",
    "@types/node": "^20.17.6",
    "@vitest/coverage-v8": "^2.1.4",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "@types/jsdom": "^21.1.7",
    "jsdom": "^25.0.1"
  }
}
